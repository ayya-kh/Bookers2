<body>
    <main>
      <p id="notice"></p>
      <div class="container">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h1>User info</h1>
          <div>
          <% if @user.errors.any? %>
          <%= @user.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
          </div>

          <%= form_with model: @user, url: user_path(@user.id), method: :patch  do |f| %>
          <div class="form-group">
            <div class="field">
              <label for="inputName">Name</label>
              <div><%= f.text_area :name, :size=>"60" %></div>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <label for="inputImage">Image</label>
              <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", :size=>"60" %></div>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <label for="inputIntroduction">Introduction</label>
              <div><%= f.text_area :introduction, :size=>"60" %></div>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
          <% end %>
        </div>
      </div>
    </main>
</body>