<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">
  </head>

  <body>
    <header class="shadow-sm bg-dark">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand text-white" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler bg-secondary" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon "></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %><!-- ログインしている -->
              <div class="text-white">
                <li class="nav-item link-danger">
                <i class="fas fa-home"></i><%= link_to "Home", user_path(current_user.id) %>
                </li>
              </div>
              <div class="text-white">
                <li class="nav-item">
                <i class="fas fa-users"></i><%= link_to "Users", "/users" %>
                </li>
              </div>
              <div class="text-white">
                <li class="nav-item">
                <i class="fas fa-book-open"></i><%= link_to "Books", "/books" %>
                </li>
              </div>
              <div class="text-white">
                <li class="nav-item">
                <i class="fas fa-sign-out-alt"></i><%= link_to "Log out", destroy_user_session_path, method: :delete %>
                </li>
              </div>


              <% else %><!-- ログインしていない -->
              <div class="text-white">
                <li class="nav-item link-danger">
                <i class="fas fa-home"></i><%= link_to "Home", root_path %>
                </li>
              </div>
              <div class="text-white">
                <li class="nav-item">
                <i class="fas fa-link"></i><%= link_to "About", about_path %>
                </li>
              </div>
              <div class="text-white">
                <li class="nav-item">
                <i class="fas fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path %>
                </li>
              </div>
              <div class="text-white">
                <li class="nav-item">
                <i class="fas fa-sign-in-alt"></i><%= link_to "Log in", new_user_session_path %>
                </li>
              </div>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
  </header>
    <main class="mb-auto">
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
